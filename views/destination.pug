extends layout

block content
	.page-header
		h1 Plan your trip

	section
		h1=title
		ul
			for destination in destinations
				li=destination

	section
		#search-div
			h4 Choose your destination
			form#newTripForm(method="POST" action="/destination/newTrip")
				#search-field-and-button
					input(type='hidden', name='_csrf', value=_csrf)
					input#pac-input.controls(type='text', placeholder='Enter a city, town or region',name='search_bar')
					input#destination(type='hidden', name='destination', placeholder='dest')
					input#longitude(type='hidden', name='longitude', placeholder='long')
					input#latitude(type='hidden', name='latitude', placeholder='lat')
					input#search-bar-button.confirm-dest-button(type='Submit', value='Confirm destination',name='search_button')
			#edit-trip-div
			h1.trip-destination
			//- #edit-trip-content
			//- input#done-button(type='button', value='Done')

		#show-trip-div
			h1.trip-destination
			#places-map.map
			#show-trip-content
			//- input#edit-trip-button(type='button', value='Edit trip')

		#trips-list
		section
